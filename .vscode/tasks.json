{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "C:/msys64/usr/bin/bash",
            "args": [
                "-c",
                "export PKG_CONFIG_PATH=/mingw64/lib/pkgconfig && g++ -g '${workspaceFolder}/src/*.cpp' -o '${workspaceFolder}/src/main.exe' $(pkg-config --cflags --libs gtkmm-3.0)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task by VSC"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/usr/bin/bash",
            "args": [
                "-c",
                "export PKG_CONFIG_PATH=/mingw64/lib/pkgconfig && g++ -fdiagnostics-color=always -g '${file}' -o '${fileDirname}/${fileBasenameNoExtension}.exe' $(pkg-config --cflags --libs gtkmm-3.0)"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
